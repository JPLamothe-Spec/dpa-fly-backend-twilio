# -------------------------
# Core Server Configuration
# -------------------------
PORT=3000
NODE_ENV=production

# -------------------------
# API Keys & Auth
# -------------------------
OPENAI_API_KEY=your_openai_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# -------------------------
# Twilio Call Settings
# -------------------------
# Twilio <Stream> or <Connect> track to capture (leave as inbound_track unless changed)
TWILIO_STREAM_TRACK=inbound_track

# -------------------------
# AI Model & Voice
# -------------------------
# OpenAI or other model identifier (e.g. gpt-4o-realtime-preview)
OPENAI_MODEL=gpt-4o-realtime-preview
# TTS voice name if applicable (Shimmer, Breeze, etc.)
VOICE_NAME=Shimmer
# Max tokens per AI response
MAX_TOKENS=256
# Temperature for AI creativity (0 = deterministic, 1 = very creative)
TEMPERATURE=0.7

# -------------------------
# Logging & Debugging
# -------------------------
ENABLE_TRANSCRIPTS=true
ENABLE_DEBUG_LOGS=true
